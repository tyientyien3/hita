
<% pagenated_questions.each do |question| %>
  <%= link_to user_question_path(question.questionee_id, question.id) do %>
    <div class="card mx-auto my-2 w-75">
      <div class="card-body">
        <div class="">
          <% if question.answer == nil%>
            <span class="badge badge-info">未回答</span>
          <% else%>
            <span class="badge badge-warning">回答済</span>
          <% end %>
          <%# いいね機能 %>
          <% if current_user.already_liked?(question) %>
            <%= link_to  question_favorites_path(question), method: :delete do %>
              <span style="color:#ff7f50;"><i class="fas fa-heart"></i></span>
            <% end %>
            <%= question.liked_users.count %>
          <% else %>
            <%= link_to  question_favorites_path(question), :method => :post do %>
              <span style="color:#ff7f50;"><i class="far fa-heart"></i></span>
            <% end %>
            <%= question.liked_users.count %>
          <% end %> <%= question.region.region_name %>
          <br>
          <i class="fal fa-heart-square"></i>
          <span><%= question.question %></span>
        </div>
      </div>
    </div>
  <% end %>
<% end %>

