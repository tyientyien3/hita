<div class="container">

  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h3>質問内容</h3>
      <%= attachment_image_tag @question.questioner, :profile_image, :fill, 40, 40, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg", size:'40x40' %>
      <%= link_to user_path(@question.questioner) do %>
      <%= @question.questioner.username %>
      <% end %>
      <% if @question.errors.any? %>
      <div class="alert alert-warning">
        <ul>
          <% @question.errors.full_messages.each do |message| %>
          <li><%= message %> error </li>
          <% end %>
        </ul>
      </div>
      <% end %>
      <div class="question">
        <p><%= @question.question %></p>
      </div>
      <div>回答はこちら</div>
      <div class="edit_answer">
        <%= form_for(@question, url: user_question_path) do |f| %>
        <%= f.text_area :answer, size: "60x10" %>
        <%= f.submit '回答する',class: "btn btn-primary" %>
        <%= link_to "戻る", :back, class:'btn btn-default' %>
        <div class="text-right">
          <%= link_to "質問を削除する", user_question_path(@user, @question), class: "btn btn-danger", method: :delete, "data-confirm" => "この質問を削除します" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<%= stylesheet_link_tag 'questions' %>