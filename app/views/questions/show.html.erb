<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="question">
        <p>質問</p>
        <%= @question.question %>
      </div>
      <div class="answer">
        <p>回答</p>
        <%= @question.answer %>
      </div>
      <%= link_to "戻る",  user_path(@user.id), class:'btn btn-primary' %>
      <%= link_to "この質問を削除する",  user_question_path(@question.questionee_id, @question), method: :delete, class:'btn btn-danger' %>
    </div>
  </div>
</div>