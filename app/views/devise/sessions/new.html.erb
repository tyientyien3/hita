<div class="row">
  <div class="col-md-10 offset-md-1">
    <div class="card">
      <h3 class="card-header">Log In</h3>
      <div class="card-body bg-info">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group">
            <%= f.label :"メールアドレス" %><br />
            <%= f.email_field :email, autofocus: true, class: "form-control", autocomplete: "email" %>
          </div>
          <div class="form-group">
            <%= f.label :"パスワード" %><br />
            <%= f.password_field :password, class: "form-control", autocomplete: "current-password" %>
          </div>
          <div class="actions">
            <%= f.submit "Log in",class: "btn btn-default" %>
          </div>
        <% end %>
        <%= link_to 'パスワードをお忘れですか？', new_user_password_path %>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-6 offset-md-4">
    <h4>新しいアカウントを作る
      <%= link_to 'Create an account', new_user_registration_path %>
    </h4>
  </div>
</div>
