<div class="row">
  <div class="col-md-10 offset-md-1">
    <div class="card">
      <h3 class="card-header">Get Start With Your Account</h3>
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="form-group">
            <%= f.label :"メールアドレス" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder:"abcdef@abc.com", :size=>"43" %>
          </div>
          <%#  ユーザー名 %>
          <div class="form-group">
            <%= f.label :"ユーザー名" %><br />
            <%= f.text_field :username, autofocus: true, class: "form-control", placeholder:"username", :size=>"43" %>
          </div>
          <%# 在住ステータス %>
          <div class="form-group">
            <%= f.label :"在住ステータス" %><br />
            <%= f.select :user_status, User.user_statuses.keys.to_a,  class: "form-control" %>
          </div>
          <%# 国選択　%>
          <div class="form-group">
            <%= f.label :"国" %><br />
            <input type="hidden" value="<%= @regions_name %>" class="region_names" />
            <%= f.collection_select :country_id, Country.all, :id, :country_name, :prompt =>"国を選択してください。", class: "form-control" %>
          </div>
          <%# 都市選択　%>
          <div class="form-group">
            <%= f.label :"都市" %><br />
            <%= f.collection_select :region_id, [], :id, :region_name, :prompt =>"都市を選択してください。", class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :パスワード %>
            <% if @minimum_password_length %>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder:"パスワード(６文字以上ご入力ください)", :size=>"43" %>
          </div>
          <div class="form-group">
            <%= f.label :パスワード確認 %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder:"同じパスワードをご入力ください", :size=>"43" %>
          </div>
          <div class="actions text-right">
            <%= f.submit "Sign up",class: "btn btn-outline-dark " %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="actions text-center mt-3">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= f.hidden_field :email, value: "hita@gmail.com" %>
    <%= f.hidden_field :password, value: "testuser" %>
    <%= f.submit "テストユーザーとして簡単ログイン", class:"btn btn-outline-success"%>
  <% end %>
</div>

