<div class="intro">
  <h1 class="text-center logo">HITA</h1>
  <h1 class="text-center">TO TAKE A STEP</h1>
</div>
<%# ログイン時に表示 %>
<% if user_signed_in? %>
  <%# 回答済みの質問一覧　ランダム %>
  <h2 class="text-center mt-5">◆回答済みの質問◆</h2>
  <div class="row mx-auto">

  <% @random.each do |book| %>
    <div class="card mx-auto my-2 w-75">
      <div class="card-body">
        <span class="badge badge-light">country</span>
        <span class="badge badge-dark">region</span>
        ♡
        <%= book.question %>
      </div>
    </div>
  <% end %>

<% else %>
  <%# 未ログイン時に表示 %>
  <div class="row">
    <div class="mx-auto login_sigin_ations">
      <%= link_to "新規登録", new_user_registration_path, class: "signin_actions" %>
      <%= link_to "ログイン", new_user_session_path, class: "login_actions" %>
    </div>
  </div>
<% end %>

<%= stylesheet_link_tag 'homes' %>
